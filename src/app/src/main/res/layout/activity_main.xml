<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/banner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/profilePicture"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Oliver Corsino"
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toEndOf="@+id/profilePicture"
            android:textSize="24sp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/banner"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/cameraButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/favoriteButton"
            app:layout_constraintTop_toTopOf="@+id/favoriteButton"
            app:layout_constraintBottom_toBottomOf="@+id/favoriteButton"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/favoriteButton"
            app:layout_constraintStart_toEndOf="@+id/cameraButton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/inboxButton"
            app:layout_constraintTop_toTopOf="@+id/inboxButton"
            app:layout_constraintBottom_toBottomOf="@+id/inboxButton"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/inboxButton"
            app:layout_constraintStart_toEndOf="@+id/favoriteButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/profilePicture"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="154dp"
            android:layout_height="116dp" app:srcCompat="@drawable/dataimage"
            tools:layout_editor_absoluteY="335dp" tools:layout_editor_absoluteX="20dp" android:id="@+id/dataImeage"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="87dp" app:srcCompat="@drawable/imagesimage"
            tools:layout_editor_absoluteY="342dp" tools:layout_editor_absoluteX="222dp" android:id="@+id/picturesImage"/>
    <ImageView
            android:layout_width="167dp"
            android:layout_height="116dp" app:srcCompat="@drawable/videosimage"
            tools:layout_editor_absoluteY="495dp" tools:layout_editor_absoluteX="20dp" android:id="@+id/videoImage"/>
    <ImageView
            android:layout_width="178dp"
            android:layout_height="82dp" app:srcCompat="@drawable/codeimage"
            tools:layout_editor_absoluteY="495dp" tools:layout_editor_absoluteX="222dp" android:id="@+id/codeImage"/>

</android.support.constraint.ConstraintLayout>